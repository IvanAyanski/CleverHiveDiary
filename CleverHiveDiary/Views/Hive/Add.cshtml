@using CleverHiveDiary.Core.ViewModels.Hive
@model AddHiveViewModel

@{
    ViewBag.Title = "Добавяне на кошер";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post" asp-action="Add">
            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label">Име</label>
                <input asp-for="@Model.Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Production" class="form-label">Продукция</label>
                <input asp-for="Production" class="form-control" />
                <span asp-validation-for="Production" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Floors" class="form-label">Етажи</label>
                <input asp-for="Floors" class="form-control" />
                <span asp-validation-for="Floors" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Discription" class="form-label">Описание</label>
                <input asp-for="Discription" class="form-control" />
                <span asp-validation-for="Discription" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.StatusId" class="form-label">Статус</label>
                <select asp-for="@Model.StatusId" class="form-control">
                    @foreach (var type in Model.statusHives)
                    {
                        <option value="@type.Id">@type.Name</option>
                    }
                </select>
                <span asp-validation-for="StatusId" class="text-danger"></span>
            </div>

            <div class="mb-3" asp-controller="Hive" asp-action="Add" method="post">
                <input class="btn btn-primary" type="submit" value="Добави кошера" />
            </div>

        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}