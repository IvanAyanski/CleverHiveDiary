@using CleverHiveDiary.Core.ViewModels;
@model EditUserViewModel

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <input type="hidden" asp-for="@Model.Id" />
            <div class="form-group">
                <label asp-for="UserName">Потребителско име</label>
                <input asp-for="UserName" class="form-control" placeholder="Име...">
                <span asp-validation-for="UserName" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email">Имейл</label>
                <input asp-for="Email" class="form-control" placeholder="Имейл...">
                <span asp-validation-for="Email" class="small text-danger"></span>
            </div>
            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Запази" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
