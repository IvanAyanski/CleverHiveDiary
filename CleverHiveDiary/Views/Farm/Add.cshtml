@using CleverHiveDiary.Core.ViewModels.Farm
@model AddFarmViewModel

@{
    ViewBag.Title = "Добавяне на Ферма!";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label">Име</label>
                <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Location" class="form-label">Местоположение</label>
                <input asp-for="@Model.Location" class="form-control" aria-required="true" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>

            <div class="mb-3" asp-controller="Farm" asp-action="Add" method="post">
                <input class="btn btn-primary" type="submit" value="Добави" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
