@using CleverHiveDiary.Core.ViewModels.Farm
@model EditFarmViewModel

@{
    ViewBag.Title = "Промяна на ферма";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <input type="hidden" asp-for="@Model.Id" />
            <div class="form-group">
                <label asp-for="Name">Име</label>
                <input asp-for="Name" class="form-control" placeholder="Име...">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location">Локация</label>
                <input asp-for="Location" class="form-control" placeholder="Локация...">
                <span asp-validation-for="Location" class="small text-danger"></span>
            </div>
            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Запази" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}